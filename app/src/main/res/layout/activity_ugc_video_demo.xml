<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UgcVideoDemoActivity">

    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:text="record video"
        android:textAllCaps="false"
        android:layout_marginTop="160dp"
        android:onClick="record"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:text="VideoView的使用"
        android:textAllCaps="false"
        android:onClick="play"
        android:layout_height="wrap_content">
    </Button>


    <Button
        android:layout_width="match_parent"
        android:text="带手势控制和全屏切换的播放页面"
        android:textAllCaps="false"
        android:onClick="play1"
        android:layout_height="wrap_content">
    </Button>


    <Button
        android:layout_width="match_parent"
        android:text="选择本地视频封面"
        android:textAllCaps="false"
        android:onClick="selectVideoCover"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:text="本地视频裁剪"
        android:textAllCaps="false"
        android:onClick="cutVideo"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:text="本地视频拼接"
        android:textAllCaps="false"
        android:onClick="joinVideo"
        android:layout_height="wrap_content">
    </Button>


</LinearLayout>
