<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_record_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_ugc_record_speed"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_slowest"
            android:layout_width="47dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:button="@null"
            android:text="极慢"
            android:textColor="@drawable/ugckit_record_speed_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_slow"
            android:layout_width="47dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:button="@null"
            android:text="慢"
            android:textColor="@drawable/ugckit_record_speed_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_normal"
            android:layout_width="47dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:button="@null"
            android:text="标准"
            android:textColor="@drawable/ugckit_record_speed_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_fast"
            android:layout_width="47dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:button="@null"
            android:text="快"
            android:textColor="@drawable/ugckit_record_speed_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_fastest"
            android:layout_width="47dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:button="@null"
            android:text="极快"
            android:textColor="@drawable/ugckit_record_speed_selector"
            android:textSize="12sp" />
    </RadioGroup>
</LinearLayout>