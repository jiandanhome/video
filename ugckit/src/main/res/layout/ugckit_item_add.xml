<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_paster_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_ugc_add" />

    <TextView
        android:id="@+id/add_paster_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_paster_image"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/add_paster_image"
        app:layout_constraintLeft_toLeftOf="@id/add_paster_image"
        app:layout_constraintRight_toRightOf="@id/add_paster_image"
        android:layout_marginTop="5dp"
        android:text="@string/ugckit_add"
        android:textColor="@color/ugckit_white"
        android:textSize="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>