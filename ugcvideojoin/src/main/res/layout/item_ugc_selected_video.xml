<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="5dp"
    android:layout_height="68dp">


    <ImageView
        android:id="@+id/ivSelectedVideo"
        android:layout_width="63dp"
        app:layout_constraintTop_toTopOf="@id/ibDelete"
        android:src="@drawable/ic_ugc_video_placeholder"
        app:layout_constraintRight_toRightOf="@+id/ibDelete"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="63dp">
    </ImageView>


    <ImageButton
        android:id="@+id/ibDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_ugckit_delete"
        android:background="@null"
        android:layout_width="16dp"
        android:layout_height="16dp">
    </ImageButton>


    <TextView
        android:id="@+id/tvVideoDuration"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:textColor="#fff"
        tools:text="00:15"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@id/ivSelectedVideo"
        app:layout_constraintRight_toRightOf="@id/ivSelectedVideo"
        android:layout_height="wrap_content">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>