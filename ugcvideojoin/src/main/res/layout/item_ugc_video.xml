<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivVideo"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_ugc_video_placeholder"
        android:layout_height="0dp">
    </ImageView>

    <TextView
        android:id="@+id/tvVideoDuration"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#fff"
        tools:text="00:15"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@id/ivVideo"
        app:layout_constraintRight_toRightOf="@id/ivVideo"
        android:layout_height="wrap_content">
    </TextView>

    <View
        android:id="@+id/vCover"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_ugc_video_cover"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>